{
    "name": "appkonik/products",
    "description": "Ecommerce Products Package",
    "keywords": [
        "appkonik",
        "products"
    ],
    "homepage": "https://github.com/appkonik/products",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Appkonik LLC",
            "email": "info@appkonik.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "illuminate/support": "^8.1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Appkonik\\Products\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Appkonik\\Products\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Appkonik\\Products\\ProductsServiceProvider"
            ],
            "aliases": {
                "Products": "Appkonik\\Products\\ProductsFacade"
            }
        }
    }
}
